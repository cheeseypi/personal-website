.bodybox
  display: block
  margin: 10px
  padding: 10px
  padding-top: 15px
  padding-bottom: 15px
  text-align: center
  align-content: center
  border-color: #DDD
  border-width: 1px
  border-style: solid
  box-shadow: 0px 5px 10px -5px
  border-radius: 10px
  transition: box-shadow .5s, border-radius .5s
  &:hover
    box-shadow: 0px 5px 10px
    border-radius: 2px
